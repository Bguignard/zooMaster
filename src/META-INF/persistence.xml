<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="zoo" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>fr.ynov.vincensini.zoo.service.CagePOJO</class>
        <class>fr.ynov.vincensini.zoo.service.GazellePOJO</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/zoo"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>

        </properties>
    </persistence-unit>
</persistence>
